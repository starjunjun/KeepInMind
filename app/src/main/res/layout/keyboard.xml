<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    tools:context="com.example.jungle.keepinmind1.Activity.GuPiaoContentActivity">
    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/keyboradup"
        android:textSize="22sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/k7"
                android:layout_width="1dp"
                android:textColor="@color/colorText"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:clickable="true"
                android:background="@drawable/keyboradselect"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:id="@+id/k8"
                android:textSize="18sp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:clickable="true"
                android:background="@drawable/keyboradselect"
                android:gravity="center"
                android:text="8" />

            <TextView
                android:id="@+id/k9"
                android:textColor="@color/colorText"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:clickable="true"
                android:background="@drawable/keyboradselect"
                android:gravity="center"
                android:text="9" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/k4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:clickable="true"
                android:background="@drawable/keyboradselect"
                android:gravity="center"
                android:textSize="18sp"
                android:text="4" />

            <TextView
                android:id="@+id/k5"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/keyboradselect"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/k6"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:clickable="true"
                android:background="@drawable/keyboradselect"
                android:gravity="center"
                android:text="6" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1dp"
                    android:textColor="@color/colorText"
                    android:id="@+id/k1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:background="@drawable/keyboradselect"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:id="@+id/k2"
                    android:layout_width="1dp"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorText"
                    android:clickable="true"
                    android:background="@drawable/keyboradselect"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:id="@+id/k3"
                    android:textColor="@color/colorText"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:background="@drawable/keyboradselect"
                    android:gravity="center"
                    android:text="3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/keyboradselect"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:text="."
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/k0"
                    android:textColor="@color/colorText"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:background="@drawable/keyboradselect"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/kc"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/keyboradselect"
                    android:gravity="center"
                    android:text="C" />

            </LinearLayout>


        </LinearLayout>





</LinearLayout>

    <TextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ok"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="@drawable/keyboradselect"/>
</LinearLayout>